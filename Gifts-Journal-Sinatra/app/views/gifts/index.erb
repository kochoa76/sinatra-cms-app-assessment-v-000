
<h1>All Gifts:</h1>
<% @gifts.each do |gift| %>
  <ul>
    <a href="/gifts/<%= gift.slug %>"><%= gift.name %></a> by <a href="/users/<%= @user.slug %>"><%= @user.username if @user %></a>
  </ul>
<% end %>

<br></br>
<p><a href="/gifts/create_gift">Add Gift</a></p>

<% if !logged_in? %>
  <p><a href="/login">Log In</a></p>
<% else %>
  <p><a href="/users/<%= current_user.slug %>/gifts">My Gifts</a></p>
  <p><a href="/users/<%= current_user.slug %>">My Profile</a></p>
  <p><a href="/logout">Log Out</a></p>
<% end %>
<p><a href="/">Home</a></p>
